{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pedal Editor",
  "version": "0.1.0",
  "identifier": "com.librarian.pedal-editor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": false,
    "targets": "all"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pedal Editor",
        "width": 800,
        "height": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}

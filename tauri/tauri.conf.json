{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pedal Editor",
  "version": "0.1.0",
  "identifier": "com.librarian.pedal-editor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pedal Editor",
        "width": 1600,
        "height": 1000,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  }
}
